<div
  class="bg-gray-700 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]"
>
  <button
    class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
  ><a href="/">Volver</a></button>
  <h1
    class="flex justify-center items-center text-5xl text-white font-extrabold pt-8 mb-14"
  >Registro de usuario</h1>
  <div class="flex justify-center items-center pb-8">
    <form action="/api/users/register" method="POST" class="flex flex-col">
      <label for="first_name" class="text-2xl">Nombre</label>
      <input
        type="text"
        name="first_name"
        required
        class="text-2xl text-black"
      />
      <br />
      <label for="last_name" class="text-2xl">Apellido</label>
      <input
        type="text"
        name="last_name"
        required
        class="text-2xl text-black"
      />
      <br />
      <label for="age" class="text-2xl">Edad</label>
      <input type="number" name="age" required class="text-2xl text-black" />
      <br />
      <label for="email" class="text-2xl">Email</label>
      <input type="email" name="email" required class="text-2xl text-black" />
      <br />
      <label for="password" class="text-2xl">Contraseña</label>
      <input type="text" name="password" required class="text-2xl text-black" />
      <br /><br />
      <button
        type="submit"
        class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
      >Registrar</button>
      <br />
      <div class="flex gap-2">
        <p class="text-base font-medium text-gray-400">¿Ya tienes una cuenta?</p>
        <a
          class="text-gray-400 hover:text-white hover:font-extrabold"
          href="/login"
        >Inicia sesión</a>
      </div>
    </form>
  </div>
</div>
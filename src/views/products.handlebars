<div
  class="p-16 top-0 left-0 z-[-2] w-screen min-h-full bg-gray-700 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]"
>
  {{#if user}}
    <div class="flex justify-center items-center gap-3 my-8">
      <h2 class="text-white text-2xl">¡Bienvenido
        {{user.first_name}}
        {{user.last_name}}!</h2>
      <br />
      <button
        class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
      ><a href="/api/users/profile">Mi perfil</a></button>
      <br />
      <button
        class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
      ><a href="/carts/{{cartId}}">Carrito de compras</a></button>
      <br />
      <button
        class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
      ><a href="/api/users/logout">Cerrar sesión</a></button>
    </div>
  {{/if}}
  {{#unless user}}
    <div class="flex justify-center items-center gap-3 my-8">
      <h2 class="text-white text-2xl">¡Bienvenido!</h2>
      <br />
      <button
        class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
      ><a href="/register">Registrar usuario</a></button>
      <br />
      <button
        class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
      ><a href="/login">Iniciar sesión</a></button>
    </div>
  {{/unless}}
  <h1
    class="flex justify-center items-center text-5xl text-white font-extrabold pt-8 mb-20"
  >Products</h1>
  <div class="grid grid-cols-2 justify-items-center gap-5 mb-8 mx-2">
    {{#each products}}
      <div
        class="max-w-lg w-full p-6 mx-2 border rounded-lg shadow bg-gray-800 border-gray-700"
      >
        <a href="#">
          <h5
            class="mb-2 text-2xl font-bold tracking-tight text-white"
          >{{title}}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-400">{{description}}</p>
        <p class="mb-3 font-normal text-gray-400">$
          {{price}}</p>
        <p class="mb-3 font-normal text-gray-400">{{_id}}</p>
        
        <form action="/api/carts/{{../cartId}}/product/{{id}}" method="POST">
          <button
            class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          >
            Add to Cart
            <svg
              class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </button>
        </form>

      </div>
    {{/each}}
  </div>
  <footer class="flex justify-center items-center mt-20">
    <div class="flex flex-col justify-center items-center mb-4">
      <div class="flex mb-4 gap-3">
        {{#if hasPreviousPage}}
          <a
            href="/products?page={{previousPage}}"
            class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
          > Anterior </a>
        {{else}}
          <button
            disabled
            class="flex items-center justify-center px-4 h-10 text-base font-medium border rounded-lg cursor-not-allowed bg-gray-600 border-gray-700 text-gray-400"
          > Anterior </button>
        {{/if}}
        {{#if hasNextPage}}
          <a
            href="/products?page={{nextPage}}"
            class="flex items-center justify-center px-4 h-10 ms-3 text-base font-medium border rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-900 hover:text-white"
          > Siguiente </a>
        {{else}}
          <button
            disabled
            class="flex items-center justify-center px-4 h-10 ms-3 text-base font-medium text-gray-5 border rounded-lg cursor-not-allowed bg-gray-600 border-gray-700 text-gray-400"
          > Siguiente </button>
        {{/if}}
      </div>
      <div class="flex justify-center items-center pr-6">
        <span class="text-base text-gray-400">Página
          <span class="font-medium text-white">{{currentPage}}</span>
          de
          <span class="font-medium text-white">{{totalPages}}</span></span>
      </div>
    </div>
  </footer>
</div>
<div
  class="absolute top-0 z-[-3] h-screen w-screen bg-gray-700 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]"
>

  <h1
    class="flex justify-center items-center text-5xl text-white font-extrabold py-8"
  >Cart</h1>

  {{#each cartproducts}}
    <div class="flex justify-center">
      <div
        class="mt-8 flex flex-col text-white text-2xl font-extrabold gap-3 w-80"
      >
        <p>Producto: {{this.product.title}}</p>
        <p>Precio: ${{this.product.price}}</p>
        <p>Cantidad: {{this.quantity}}</p>
      </div>
    </div>
  {{/each}}

</div>